<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="TrabajoTest"
		transaction-type="RESOURCE_LOCAL">
		
		<class>es.uma.informatica.jpa.tarea1.Alumno</class>
		<class>es.uma.informatica.jpa.tarea1.Asignatura</class>
		<class>es.uma.informatica.jpa.tarea1.AsignaturasMatricula</class>
		<class>es.uma.informatica.jpa.tarea1.Centro</class>
		<class>es.uma.informatica.jpa.tarea1.Clase</class>
		<class>es.uma.informatica.jpa.tarea1.Encuesta</class>
		<class>es.uma.informatica.jpa.tarea1.Expediente</class>
		<class>es.uma.informatica.jpa.tarea1.Grupo</class>
		<class>es.uma.informatica.jpa.tarea1.GrupoPorAsignatura</class>
		<class>es.uma.informatica.jpa.tarea1.Login</class> 
		<class>es.uma.informatica.jpa.tarea1.Matricula</class>
		<class>es.uma.informatica.jpa.tarea1.Optativas</class>
		<class>es.uma.informatica.jpa.tarea1.Solicitud</class>
		<class>es.uma.informatica.jpa.tarea1.Titulacion</class>
		<shared-cache-mode>NONE</shared-cache-mode>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/sii" />
			<property name="javax.persistence.jdbc.user" value="siiuser" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="siipassword" />
			
		</properties>

	</persistence-unit>
</persistence>
